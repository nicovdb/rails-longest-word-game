<h1>New Gaaaaame</h1>
<h3><% @letters.each do |letter| %>
  <%= letter.upcase %>
<% end %></h3>

<p>What is the longer word you can find ?</p>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="Longest word ever">
  <input type="submit" value="Play">
</form>
